<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.MainActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:fadingEdge="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:divider="@color/white"
                android:showDividers="middle"
                android:weightSum="3"
                android:onClick="showCoreData"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日绑卡"
                        android:layout_marginTop="18dp"
                        android:textColor="@color/white"

                        />

                    <TextView
                        android:id="@+id/tv_ghs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="18dp"
                        android:textColor="@color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        tools:text="834" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginBottom="18dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="环比上周"
                            android:textColor="@color/white"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/label_textsize"
                            />

                        <TextView
                            android:id="@+id/tv_hbsz_ghs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+5"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/cricle_bg"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textStyle="bold"
                            android:textSize="@dimen/change_textsize"
                            android:textColor="@color/up" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日挂号数量"
                        android:textColor="@color/white"
                        android:layout_marginTop="18dp"

                        />

                    <TextView
                        android:id="@+id/tv_jrghs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="18dp"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        tools:text="1034" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="环比上周"
                            android:textColor="@color/white"
                            android:layout_marginTop="2dp"
                            android:textSize="@dimen/label_textsize"

                            />

                        <TextView
                            android:id="@+id/tv_hbsz_jrgh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/up"
                            android:background="@drawable/cricle_bg"
                            android:layout_marginLeft="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="@dimen/change_textsize"
                            android:textStyle="bold"
                            tools:text="+5" />

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今日挂号人数"
                        android:textColor="@color/white"
                        android:layout_marginTop="18dp"
                        />

                    <TextView
                        android:id="@+id/tv_jrbk"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        tools:text="834" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="环比上周"
                            android:textSize="@dimen/label_textsize"
                            android:layout_marginTop="2dp"
                            />

                        <TextView
                            android:id="@+id/tv_hbsz_bk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/up"
                            android:layout_marginLeft="5dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:textSize="@dimen/change_textsize"
                            android:background="@drawable/cricle_bg"
                            android:textStyle="bold"
                            tools:text="+5" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        <com.benmu.bmreport.widget.MyGridView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_gv"
            android:stretchMode="columnWidth"
            android:numColumns="2"
            android:listSelector="@null"
            android:horizontalSpacing="0.5dp"
            android:verticalSpacing="0.5dp"
            android:gravity="center"
            android:background="@color/c_septal_line"
            />

        </LinearLayout>


    </ScrollView>
</RelativeLayout>
